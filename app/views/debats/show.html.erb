
<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://unsplash.com/photos/jrh5lAq-mIs');">
  <div class="banner-content">
    <h1><%= @debat.description %></h1>
    <p>Il se termine le </p> 
    <h2><%= @debat.due_date %></h2>
    <%= render 'votes/form', debat: @debat, vote: @vote %>
  </div>
</div>

<div class="container">
  <div class="row">
    <h2>Votes Results</h2>
    <div id="debats">
      <% if @debat.votes.blank? %>
        Be the first to vote for <%= @debat.title %>
      <% else %>
        <% @debat.votes.each do |vote| %>
        <%= render 'votes/show', vote: vote %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>